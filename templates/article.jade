
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}



block content
  p By #{page.metadata.author}
  if page.metadata.banner
    img.banner(src="./"+page.metadata.banner)
  br
  article.article
    section.content!= typogr(page.html).typogrify()

  div.nav
    a(href='/blog.html') Â« Full blog

block bottom_scripts
  style.
    img {
      max-width: 80%;
       margin: auto;
    } 
    img.banner{
      margin: 0 auto;
      max-width:100%;
      display: block;
      margin-top: -20px;
    }