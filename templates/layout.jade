      block top_scripts
  body(class=bodyclass)
    header
      div.menu-bar
        a.logo(href = '/', style="background-image: url(#{locals.logo})")
        ul.menu
          li
            a(href='/') Home
          li 
            a(href = locals.url+'/about.html') About
            ul.sub-menu
              li 
                a(href = locals.url + '/about.html#mission') Mission
              li 
                a(href = locals.url + '/about.html#vision') Vision
              li 
                a(href = locals.url + '/about.html#partners') Partners
          li   Events
            ul.sub-menu
              li
                a(href = locals.url + '/events.html#ongoing') On-going Events
              li
                a(href = locals.url + '/events.html#past') Past Events
          li 
            a(href = locals.url + '/contact.html') Contact Us
    block header
    block beforeContent


    div.container
        block content
    block aftercontent
          
    footer
        a.logo(href = '/', style="background-image: url(#{locals.logo})")
        div.footer-text
          | We are a team of credentiated (and practicing) mental health professionalls trained in India and the United States. Our core competency lies in empowering individuals and institutions  through our training and consultancy.
        div.venue
          span.venue VENUE
          address Aspire Labs, B-37, Sector 1 Noida
            br
            [Red Brick building near Gail(India) Ltd.
      
        block footer
          section.copy
           // p &copy; #{ new Date().getFullYear() } #{ locals.owner } 
              //- please leave the "powered by" if you use the design
  script.
    window.onhashchange = function(){
    if(window.scrollY > 0 || location.hash){
        window.scrollBy(0, -100)
    }
    }
    
    window.onscroll = function(){
      if (window.scrollY > 20){
          $('header').addClass('scroll');
        }
        else  
          $('header').removeClass('scroll');
    }
  block bottom_scripts




